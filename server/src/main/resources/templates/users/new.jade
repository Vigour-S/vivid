extends ../layouts/layout

block body
  .row
    .col-md-offset-3.col-md-6
      .panel.panel-info
        .panel-heading
          span.title Sign up
        .panel-body
          form.form-horizontal(action='/signup', method='post')
            .form-group
              label.control-label.col-md-3(for='email') Email
              #{email_error}
              .col-md-9
                input#username.form-control(type='text', name='email')
            .form-group
              label.control-label.col-md-3(for='username') Username
              #{username_error}
              .col-md-9
                input#username.form-control(type='text', name='username')
            .form-group
              label.control-label.col-md-3(for='password') Password
              #{password_error}
              .col-md-9
                input#password.form-control(type='password', name='password')
            .form-group
              label.control-label.col-md-3(for='confirm') Confirm
              #{confirm_error}
              .col-md-9
                input#password.form-control(type='password', name='confirm')
            .form-actions.form-group
              .col-md-offset-3.col-md-10
                button.btn.btn-default(type='submit') Sign up